{
    "manifest_version": 3,
    "name": "Netflix Watch Tracker",
    "version": "1.0",
    "description": "Tracks movies and series you watch on Netflix.",
    "permissions": ["storage"],
    "host_permissions": ["https://www.netflix.com/*", "https://georzuqfssefsmcunjnu.supabase.co/*"],
    "action": {
      "default_popup": "login.html"
    },
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
      {
        "matches": ["https://www.netflix.com/watch/*",
        "https://georzuqfssefsmcunjnu.supabase.co/*"],
        "js": ["content.js"]
      }
    ]
  }
  